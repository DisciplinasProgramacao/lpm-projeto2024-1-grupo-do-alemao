import java.time.LocalDate;

public class TesteRestaurante {
    public static void main(String[] args) {
       
        Mesa mesa1 = new Mesa();
        mesa1.setCod(1);
        mesa1.setDisponivel(true);

      
        Cliente cliente1 = new Cliente("João");

  
        LocalDate dataReserva = LocalDate.now();
        int pessoas = 4;
        RequisicaoReserva requisicao1 = new RequisicaoReserva(dataReserva, pessoas, cliente1, mesa1);

       
        System.out.println("Reserva ativa antes do cancelamento: " + requisicao1.isAtiva());
        requisicao1.cancelar();
        System.out.println("Reserva ativa após o cancelamento: " + requisicao1.isAtiva());

      
        mesa1.setDisponivel(false);
        System.out.println("Status da mesa antes da liberação: " + mesa1.estaDisponivel());
        mesa1.liberarMesa(1);
        System.out.println("Status da mesa após a liberação: " + mesa1.estaDisponivel());
    }
}
