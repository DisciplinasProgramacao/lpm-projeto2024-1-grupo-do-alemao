import java.time.LocalDate;

public class RequisicaoReserva {
    private static int proximoId = 1;
    private int id;
    private String nomeItem;
    private LocalDate dataReserva;
    private boolean ativa;
    private int pessoas;
    private Cliente cliente;

 //  Construtor da classe RequisicaoReserva recebe como parâmetro uma string nomeItem localdatareserva como LocalDate, int pessoas e Cliente cliente. E também, gera um código inteiro para  a Reserva.//


    public RequisicaoReserva(String nomeItem, LocalDate dataReserva, int pessoas, Cliente cliente) {
        this.id = proximoId++;
        this.nomeItem = nomeItem;
        this.dataReserva = dataReserva;
        this.ativa = true;
        this.pessoas = pessoas;
        this.cliente = cliente;
    }

//Metodo retorna o id do cliente que fez a reserva//
    public int getId() {
        return id;
    }


//Metodo retorna o Nome do Item que foi reservado//
    public String getNomeItem() {
        return nomeItem;
    }


//Metodo retorna a data da reserva//
    public LocalDate getDataReserva() {
        return dataReserva;
    }

//Metodoverifica se está ativa a reserva//

    public boolean isAtiva() {
        return ativa;
    }

//Metodo que serve para cancelar a  reserva//

    public void cancelar() {
        this.ativa = false;
    }

//Metodo retorna quantas pessoas na reserva//

    public int getPessoas() {
        return pessoas;
    }

//Metodo para recuperar o objeto cliente associado à requisição de reserva.//

    public Cliente getCliente() {
        return cliente;
    }
}

//Metodo que serve para cancelar a  reserva//

    public void cancelar() {
        this.ativa = false;
    }
}
